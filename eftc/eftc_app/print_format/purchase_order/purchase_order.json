 "html": "<!--Header Section-->\n<div class=\"hidden-pdf\" id=\"header-html\" >\n    {% if letter_head and not no_letterhead -%}\n    <div class=\"letter-head\">\n        {{ letter_head }}\n        <div class=\"col-xs-12\">\n            <p class=\"heading-right\" style=\"text-align:center;\"><b style=\"font-size: 18px !important;margin:3px 3px 3px 3px;\"> \u0623\u0645\u0631 \u0634\u0631\u0627\u0621 / Purchase Order </b></p>\n        </div>\n    </div>\n    {%- endif %}\n</div>\n\n<!--First Body-->\n{% macro first_body() %}\n\n{% set supplier = frappe.get_doc(\"Supplier\", doc.supplier) %} \n{% set link = frappe.get_doc(\"Dynamic Link\",{'link_doctype':'Supplier','link_name':supplier.name}) %} \n{% set contact = frappe.get_doc(\"Contact\", link.parent) %}\n\n<div class = \"row\">\n    <div class=\"col-xs-12\">\n        <div class=\"col-xs-9\" style = \"\">To <br>{{contact.first_name}}<br>{{doc.supplier}}<br><p>Address :- {% if doc.address_display %} {{doc.address_display}} {% endif %}</p></div>\n         <div class=\"col-xs-3\">Purchase Order Number : {{doc.name}}\n                                        <br>\n                        \u0631\u0642\u0645 \u0637\u0644\u0628 \u0627\u0644\u0634\u0631\u0627\u0621 : {{ _(doc.name) }}\n                                <br>\n                            Date : {{doc.transaction_date}}\n                                <br>\n                                PORef : Sales Order\n                                <br>\n                                PORef: \u0623\u0645\u0631 \u0627\u0644\u0645\u0628\u064a\u0639\u0627\u062a\n                                </div>\n    </div>\n</div>\n\n\n\n\n{% endmacro %}\n\n\n<!--Table Header-->\n{% macro tablehead() %}\n<div class =\"row\">\n    <div class = \"col-xs-12\" style=\"margin:0px !importent;\">\n        <table class=\"table\" style=\"margin-bottom:-10px;border:none;\" >\n            <tr style=\"font-size:8px;\">\n               <th style =\"width:1%;\"><b> \u202b\ufe8d\ufedf\ufe98\ufeb4\ufee0\ufeb4\ufee0\ufef2\ufe8d\ufedf\ufeae\ufed7\ufee2\u202c<br>SL.NO</b></th> \n<th style = \"width:30%;text-align:center\"><b>\u202b<br>\ufe8d \ufedf\ufeee\ufebb\ufed2\u202c   DESCRIPTION</b></th>\n\n                <th style = \"width:13%;text-align:center\"><b>\u202b\ufe8d\ufefb\ufee3\ufeaa\ufe8d\ufea9 \ufe8d\ufe95\u202c \u202b\ufe97\ufe8e\ufead\ufef3\ufea6\u202c <br>DATE OF SUPPLY</b></th>\n                <th style = \"width:7%;text-align:center\"><b>\u202b\ufe8d\ufedf\ufedc  \ufee4\ufef4\ufe94\u202c QTY</b></th>\n                <th style = \"width:11%;text-align:center\"><b> \u202b\ufe8d\ufedf\ufeee\ufea3<\ufeaa  \ufe93\u202c \u202b\ufeb3\ufecc\ufeae\u202c<br>UNIT PRICE</b></th>\n                <th style = \"width:10%;text-align:center\"><b>\u202b\ufee7\ufeb4\ufe92\ufe94\u202c \u202b\ufed7\ufef4\ufee4\ufe94\u202c \u202b\ufe8d\ufedf\ufec0\ufeae\ufef3\ufe92\ufe94\u202c  <br>VAT% </b></th>\n                <th style = \"width:10%;text-align:center\"><b>\u202b\ufed7\ufef4\ufee4\ufe94\u202c\n\u202b\ufe8d\ufedf\ufec0\ufeae\ufef3\ufe92\ufe94\u202c \u202b\ufe8d\ufedf\ufec0\ufeae\ufef3\ufe92\ufe94\u202c <br>VAT SAR</b></th>                \n                <th style = \"width:11%;text-align:center\"><b>\u202b\ufeb1\u202c.\ufead\u202c \u202b\ufe8d  \ufedf\ufee4\ufea0\ufee4\ufeee\ufec9\u202c <br>TOTAL SAR</b></th>\n            </tr>\n        {% for item in doc.items %}\n            <tr>\n              <td style=\"text-align:center;\">{{item.idx}} </td>\n              <td>{{item.item_name}}  </td>\n              <td>{{item.schedule_date}}</td>\n              <td>{{item.qty}}</td>\n              <td>{{item.amount}} </td>\n              {% for i in doc.taxes%}\n              {% if i%}\n              <td>{{i.rate}}</td>\n              <td  > {{i.rate}}</td>\n              {% endif%}\n              {% endfor%}\n              <td  >{{item.amount}} </td>\n       \n        {% endfor %}\n            </tr>\n        </table>\n    </div>\n</div>\n  \n<div class = \"row\" >\n    <div class = \"col-xs-6 sub-total\" >\n       <table style = \"font-size: small;border:none;\">\n                        <tr> \n                            <td><b>Other Details /   \u062a\u0641\u0627\u0635\u064a\u0644 \u0623\u062e\u0631\u0649</b></td>\n                        </tr>\n                        {% set sales_order = frappe.get_doc(\"Sales Order\", doc.sales_order) %}\n                        {% set payment_schedule = sales_order.get(\"payment_schedule\") %}\n\n                        <tr> \n                            <td ><b>\n                                {% for entry in payment_schedule %}\n                                <br>\n                                <p>Payment Terms : {{ entry.description }} </p>\n                               </b>\n                                {% endfor %}\n                                </td>\n                        </tr>\n                    \n                    </table>\n                </div>\n    \n    <div class = \"col-xs-6 sub-total float-end\" >\n       <table class = \"col-xs-6 sub-total\" style = \"font-size: small;border:none;\">\n                        <tr> \n                            <td><b>\u0627\u0644  \u0645\u062c\u0645\u0648\u0639 \u0627\u0644\u0641\u0631\u0639\u064a <br>SUB TOTAL </b></td>\n                            <td >{{ doc.get_formatted(\"total\") }}</td>\n                        </tr>\n                        <tr> \n                            <td><b>\u0636\u0631\u064a\u0628\u0629  <br> TAX </b></td>\n                            <td > {{ doc.get_formatted(\"total_taxes_and_charges\") }}</td>\n                        </tr>\n                        <tr> \n                            <td><b>\u0627\u0644\u0645\u062c\u0645\u0648\u0639 \u0627\u0644\u0625\u062c\u0645\u0627\u0644\u064a <br> GRAND TOTAL</b></td>\n                            <td > {{ doc.get_formatted(\"base_grand_total\") }}</td>\n                        </tr>\n                    </table>\n                </div>\n    \n    </div>\n    \n    <div class = \"row\" >\n    <div class = \"col-xs-12\">\n    <div class = \"col-xs-4\" style = \"border: 0.5px solid #a6a6a6;\"><b>Amount in Words\n    <br>\u0627\u0644\u0645\u0628\u0644\u063a \u0628\u0627\u0644\u0643\u0644\u0645\u0627\u062a</b></div>\n    <div class = \"col-xs-8\" style = \"border: 0.5px solid #a6a6a6;\"><b>{{doc.in_words}} <br> {{doc.custom_in_wordsarabic}}</b></div>\n    </div>\n</div>\n<div class=\"row\">\n    <div class = \"col-xs-8\">\n       <div ><p><b>Terms and Conditons:</b>\n    <br>{{doc.terms}}</p></div>\n</div>\n<div class = \"col-xs-4 QR-code\">\n     <img src={{doc.qr_image}} >\n</div>\n</div>\n\n{% endmacro %}\n\n\n\n\n\n\n<!--First Body Calling-->\n{{first_body()}}\n\n<!--Calling Table Head-->\n\n{{tablehead()}}\n<div class=\"hidden-pdf\" id=\"footer-html\" >\n    {% if not no_letterhead and footer %}\n        <div class=\"letter-head-footer\">\n            {{ footer }}\n        </div>\n    {%- endif %}\n</div>",
