 "html": "{% set seller_address = frappe.get_doc('Address', doc.company_address) %}\r\n{% set buyer_address = frappe.get_doc('Address', doc.customer_address) %}\r\n\r\n\r\n<!--Header Logo -->\r\n<div class=\"hidden-pdf\" id=\"header-html\" >\r\n  {% if letter_head and not no_letterhead -%}\r\n  <div class=\"letter-head\">\r\n      {{ letter_head }}\r\n      <div class=\"col-xs-12\">\r\n        <p class=\"heading-right\"><b style=\"font-size: 20px;padding-left: 180px; text-align:center !important;\"> \u0641\u0627\u062a\u0648\u0631\u0629 \u0636\u0631\u064a\u0628\u064a\u0629 /   Sales Invoice   </b></p>\r\n</div>\r\n  </div>\r\n  {%- endif %}\r\n</div>\r\n   \r\n <!--Address Section-->\r\n {% macro address_section() %}\r\n <html>\r\n<style>\r\ntable, th, td {\r\n  border:2px solid gray;\r\n  border-collapse: collapse;\r\n  font-size: 11.5px;\r\n}\r\n\r\n.table>thead>tr>th, .table>tbody>tr>th, .table>tfoot>tr>th, .table>thead>tr>td, .table>tbody>tr>td, .table>tfoot>tr>td{\r\n    border: px solid #f4f5f6;\r\n}\r\n.print-format td, .print-format th {\r\n    padding: 10px !important;\r\n}\r\n tr{\r\n        font-size: 10px !important;\r\n    }\r\n</style>\r\n<body>\r\n\r\n<table style=\"width:100%\">\r\n    <tr>\r\n        <th colspan=\"5\" style = \"color:black\">Invoice no: {{doc.name}}</th>\r\n        <th colspan=\"5\" style=\"text-align:right; color:black\">{{doc.name}} : \u0631\u0642\u0645 \u0627\u0644\u0641\u0627\u062a\u0648\u0631\u0629</th>\r\n    </tr>\r\n<tr>\r\n    <th colspan=\"5\">Seller Details</th>\r\n    <th colspan=\"5\" style=\"text-align:right;\"><div>\u062a\u0641\u0627\u0635\u064a\u0644 \u0627\u0644\u0628\u0627\u0626\u0639 </div></th>\r\n  </tr>\r\n  <tr>\r\n    <td style=\"background-color:#d7d7d7;\" >Name</td>\r\n    <td colspan=\"3\">{{doc.company}}</td>\r\n    {% set company_name_arabic = frappe.db.get_value(\"Company\",{\"name\":doc.company},\"company_name_in_arabic\")%}\r\n        <td colspan=\"5\" style=\"text-align:right;\">{{company_name_arabic}}</td>\r\n    <td  style=\"background-color:#d7d7d7;\" >\u0627\u0633\u0645</td>\r\n  </tr>\r\n   <tr>\r\n   <td style=\"background-color:#d7d7d7;\">Street Name</td>\r\n    <td colspan=\"3\">{{seller_address.address_line2}}</td>\r\n        <td colspan=\"5\" style=\"text-align:right;\">{{seller_address.address_line_2_in_arabic}}</td>\r\n    <td  style=\"background-color:#d7d7d7;\">\u0627\u0633\u0645 \u0627\u0644\u0634\u0627\u0631\u0639</td>\r\n  </tr>\r\n   <tr>\r\n   <td style=\"background-color:#d7d7d7;\">Building No</td>\r\n    <td >{{seller_address.address_line1}}</td>\r\n        <td  style=\"background-color:#d7d7d7;\">City</td>\r\n    <td>{{seller_address.city}}</td>\r\n    <td colspan=\"3\">{{seller_address.city__time_in_arabic}}</td>\r\n    <td style=\"background-color:#d7d7d7;\">\u0645\u062f\u064a\u0646\u0629</td>\r\n        <td>{{seller_address.address_in_arabic}}</td>\r\n    <td  style=\"background-color:#d7d7d7;\">\u0631\u0642\u0645 \u0627\u0644\u0645\u0628\u0646\u0649</td>\r\n  </tr>\r\n  <tr>\r\n   <td style=\"background-color:#d7d7d7;\">Addl No</td>\r\n        <td>1045</td>\r\n        <td  style=\"background-color:#d7d7d7;\" >District</td>\r\n        <td>{{seller_address.custom_district}}</td>\r\n        <td>{{ seller_address.custom_district_in_arabic}}</td>\r\n        <td colspan=\"3\"  style=\"background-color:#d7d7d7;\">\u064a\u0635\u0631\u0641</td>\r\n        {% if seller_address.custom_addl_no_in_arabic %}\r\n        <td>{{ seller_address.custom_addl_no_in_arabic}}</td>\r\n        {% else %}\r\n        <td></td>\r\n        {% endif %}\r\n        <td  style=\"background-color:#d7d7d7;\">\u0631\u0642\u0645 \u0625\u0636\u0627\u0641\u064a</td>\r\n        \r\n  </tr>\r\n   <tr>\r\n   <td style=\"background-color:#d7d7d7;\">Postal Code </td>\r\n    <td >{{seller_address.pincode}}</td>\r\n        <td  style=\"background-color:#d7d7d7;\">Country</td>\r\n    <td>{{seller_address.country}}</td>\r\n    <td colspan=\"3\">{{seller_address.arabic_coutry}}</td>\r\n    <td style=\"background-color:#d7d7d7;\">\u062f\u0648\u0644\u0629</td>\r\n        <td>{{seller_address.postal_code_in_arabic}}</td>\r\n    <td  style=\"background-color:#d7d7d7;\" >\u0631\u0645\u0632 \u0628\u0631\u064a\u062f\u064a</td>\r\n  </tr>\r\n \r\n <tr>\r\n      <td style=\"background-color:#d7d7d7;\">VAT</td>\r\n    <td >{{seller_address.vat_number_}}</td>\r\n    <td   style=\"background-color:#d7d7d7;\">CR NO</td>\r\n    <td>{{seller_address.cr_no}}</td>\r\n            <td colspan=\"3\">{{seller_address.cr_no_in_arabic}}</td>\r\n            <td style=\"background-color:#d7d7d7;\">\u0631\u0642\u0645 \u0627\u0644\u0633\u062c\u0644 \u0627\u0644\u062a\u062c\u0627\u0631\u064a</td>\r\n    <td >{{ seller_address.vat_number_in_arabic }}</td>\r\n    <td  style=\"background-color:#d7d7d7;\">\u0636\u0631\u064a\u0628\u0629 \u0627\u0644\u0642\u064a\u0645\u0629 \u0627\u0644\u0645\u0636\u0627\u0641\u0629</td>\r\n    \r\n\r\n\r\n\r\n </tr>\r\n</table>\r\n<div class=\"page-break\"></div>\r\n<table style=\"width:100%\">\r\n<tr>\r\n    <th colspan=\"5\">\r\n        <div style=\"\">\r\n       Buyer Details\r\n</div>\r\n    </th>\r\n    <th colspan=\"5\" style=\"text-align:right;\">\r\n        <div style=\"\">\r\n        \u062a\u0641\u0627\u0635\u064a\u0644 \u0627\u0644\u0645\u0634\u062a\u0631\u064a\r\n</div>  </</th>\r\n  </tr>\r\n  <tr>\r\n    <td  style=\"background-color:#d7d7d7;\">Name</td>\r\n    <td colspan=\"3\">{{doc.customer_name}}</td>\r\n        <td colspan=\"5\" style=\"text-align:right;\">{{doc.customer_name_in_arabic}}</td>\r\n    <td style=\"background-color:#d7d7d7;\" >\u0627\u0633\u0645</td>\r\n  </tr>\r\n   <tr>\r\n   <td  style=\"background-color:#d7d7d7;\">Street Name</td>\r\n    <td colspan=\"3\"  >{{buyer_address.address_line2}}</td>\r\n        <td colspan=\"5\" style=\"text-align:right;\">{{buyer_address.address_line_2_in_arabic}}</td>\r\n    <td  style=\"background-color:#d7d7d7;\">\u0627\u0633\u0645 \u0627\u0644\u0634\u0627\u0631\u0639</td>\r\n  </tr>\r\n   <tr>\r\n   <td  style=\"background-color:#d7d7d7;\">Building No</td>\r\n    <td >{{buyer_address.address_line1}}</td>\r\n        <td  style=\"background-color:#d7d7d7;\">City</td>\r\n    <td>{{buyer_address.city}}</td>\r\n    <td colspan=\"3\">{{buyer_address.city__time_in_arabic}}</td>\r\n    <td style=\"background-color:#d7d7d7;\">\u0645\u062f\u064a\u0646\u0629</td>\r\n        <td>{{buyer_address.address_in_arabic}}</td>\r\n    <td  style=\"background-color:#d7d7d7;\">\u0631\u0642\u0645 \u0627\u0644\u0645\u0628\u0646\u0649</td>\r\n  </tr>\r\n  <tr>\r\n   <td  style=\"background-color:#d7d7d7;\" >Addl No</td>\r\n    <td>1045</td>\r\n        <td   style=\"background-color:#d7d7d7;\">District</td>\r\n    <td>{{buyer_address.custom_district}}</td>\r\n        <td>{{ buyer_address.custom_district_in_arabic }}</td>\r\n        <td colspan=\"3\"  style=\"background-color:#d7d7d7;\">\u064a\u0635\u0631\u0641</td>\r\n        <td>{{ buyer_address.custom_addl_no_in_arabic }}</td>\r\n    <td  style=\"background-color:#d7d7d7;\">\u0631\u0642\u0645 \u0625\u0636\u0627\u0641\u064a</td>\r\n  </tr>\r\n   <tr>\r\n   <td   style=\"background-color:#d7d7d7;\">Postal Code </td>\r\n    <td >{{buyer_address.pincode}}</td>\r\n        <td  style=\"background-color:#d7d7d7;\">Country</td>\r\n    <td>{{buyer_address.country}}</td>\r\n    <td colspan=\"3\">{{buyer_address.arabic_coutry}}</td>\r\n    <td style=\"background-color:#d7d7d7;\">\u062f\u0648\u0644\u0629</td>\r\n        <td>{{buyer_address.postal_code_in_arabic}}</td>\r\n    <td  style=\"background-color:#d7d7d7;\" >\u0631\u0645\u0632 \u0628\u0631\u064a\u062f\u064a</td>\r\n  </tr>\r\n \r\n <tr>\r\n      <td  style=\"background-color:#d7d7d7;\" >VAT</td>\r\n    <td >{{buyer_address.vat_number_}}</td>\r\n    <td  style=\"background-color:#d7d7d7;\">CR NO</td>\r\n    <td>{{buyer_address.cr_no}}</td>\r\n            <td colspan=\"3\">{{buyer_address.cr_no_in_arabic}}</td>\r\n            <td style=\"background-color:#d7d7d7;\">\u06